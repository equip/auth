{
    "name": "sparkphp/auth",
    "description": "Simple middleware for handling authentication.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "psr/http-message": "^1",
        "sparkphp/adr": "^0.2"
    },
    "require-dev": {
        "firebase/php-jwt": "^3",
        "lcobucci/jwt": "^3",
        "phpunit/phpunit": "^4",
        "phake/phake": "^2.1",
        "satooshi/php-coveralls": "^0.6"
    },
    "suggest": {
        "firebase/php-jwt": "For integrating JWT support with Jwt\\Firebase* classes",
        "lcobucci/jwt": "For integrating JWT support with Jwt\\Lcobucci* classes"
    },
    "autoload": {
        "psr-4": {
            "Spark\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SparkTests\\Auth\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Daniel Olfelt",
            "email": "dolfelt@gmail.com"
        }
    ]
}
