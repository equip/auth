{
    "name": "equip/auth",
    "description": "Simple middleware for handling authentication.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Equip Contributors",
            "homepage": "https://github.com/equip"
        }
    ],
    "replace": {
        "sparkphp/auth": "self.version"
    },
    "require": {
        "php": ">=5.5",
        "psr/http-message": "^1"
    },
    "require-dev": {
        "firebase/php-jwt": "^3",
        "lcobucci/jwt": "^3.1",
        "phake/phake": "^2.1",
        "phpunit/phpunit": "^4.8|^5.0"
    },
    "suggest": {
        "firebase/php-jwt": "For integrating JWT support with Jwt\\Firebase* classes",
        "lcobucci/jwt": "For integrating JWT support with Jwt\\Lcobucci* classes"
    },
    "autoload": {
        "psr-4": {
            "Equip\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EquipTests\\Auth\\": "tests/"
        }
    }
}
